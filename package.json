{
    "name": "mi-theme",
    "displayName": "MI Colour Theme",
    "description": "Optimized semantic highlighting for C#, C++, and Python",
    "version": "25.9.0",
    "author": "Ha Minh Lam",
    "publisher": "lamhm",
    "license": "MIT",
    "scripts": {
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "homepage": "https://github.com/lamhm/vsc-theme-mi",
    "repository": {
        "type": "git",
        "url": "https://github.com/lamhm/vsc-theme-mi.git"
    },
    "engines": {
        "vscode": "^1.87.0"
    },
    "categories": [
        "Themes"
    ],
    "keywords": [
        "monokai",
        "vibrant",
        "dark",
        "light",
        "colorful",
        "c#",
        "python",
        "c++",
        "semantic"
    ],
    "icon": "assets/icon/mi-theme-icon.png",
    "contributes": {
        "themes": [
            {
                "label": "MI Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/mi-dark.json"
            },
            {
                "label": "MI Light",
                "uiTheme": "vs",
                "path": "./themes/mi-light.json"
            }
        ],
        "semanticTokenScopes": [
            {
                "language": "python",
                "scopes": {
                    "constant": [
                        "source constant.other.caps.python",
                        "constant.other.caps.python"
                    ],
                    "keyword": [
                        "storage.type.class.python"
                    ]
                }
            }
        ],
        "configurationDefaults": {
            "better-comments.tags": [
                {
                    "tag": [
                        "fixme",
                        "@fixme",
                        "bug",
                        "error"
                    ],
                    "color": "#333333",
                    "strikethrough": false,
                    "underline": false,
                    "backgroundColor": "#d8003040",
                    "bold": false,
                    "italic": true,
                    "multiline": true
                },
                {
                    "tag": [
                        "warning",
                        "@warning",
                        "warn",
                        "@warn"
                    ],
                    "color": "#333333",
                    "strikethrough": false,
                    "underline": false,
                    "backgroundColor": "#b0800040",
                    "bold": false,
                    "italic": true,
                    "multiline": true
                },
                {
                    "tag": [
                        "todo",
                        "@todo",
                        "?"
                    ],
                    "color": "#333333",
                    "strikethrough": false,
                    "underline": false,
                    "backgroundColor": "#1100dd40",
                    "bold": false,
                    "italic": true,
                    "multiline": true
                }
            ],
            "better-comments.tagsDark": [
                {
                    "tag": [
                        "fixme",
                        "@fixme",
                        "bug",
                        "error"
                    ],
                    "color": "#cccccc",
                    "strikethrough": false,
                    "underline": false,
                    "backgroundColor": "#ff267260",
                    "bold": false,
                    "italic": true,
                    "multiline": true
                },
                {
                    "tag": [
                        "warning",
                        "@warning",
                        "warn",
                        "@warn"
                    ],
                    "color": "#cccccc",
                    "strikethrough": false,
                    "underline": false,
                    "backgroundColor": "#eeee6060",
                    "bold": false,
                    "italic": true,
                    "multiline": true
                },
                {
                    "tag": [
                        "todo",
                        "@todo",
                        "?"
                    ],
                    "color": "#cccccc",
                    "strikethrough": false,
                    "underline": false,
                    "backgroundColor": "#33bbff60",
                    "bold": false,
                    "italic": true,
                    "multiline": true
                }
            ]
        }
    }
}
